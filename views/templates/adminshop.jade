
div(class='container big-wrapper main-container clearfix')
  div(class='container add-item-btn-container inline-block clearfix', ng-show='!showForm')
    button(class='add-item-btn' ng-click='toggleForm()') ADD ITEM
  div(class='container add-form-container inline-block clearfix', ng-show='showForm')
    form(ng-submit='addItem()')
      label(for='name') Name:
      input(class='field' type="text", name='name' ng-model='newItem.name')
      label(for='price') Price: 
      input(class='field' type="text", name='price' ng-model='newItem.price')
      label(for='description') Description
      textarea(class='field  textarea' type="text", name='description' ng-model='newItem.description')
      select(name="type" ng-model='newItem.type')
        option(value='Art') Art
        option(value='Rack') Rack
      input(type='submit' ng-click='toggleForm()')
  div(class=' shop-item-container')
    div(class='item-container', ng-repeat='item in items track by $index')
      h3 {{item.name}}
      img(src="{{item.image}}", alt="image")
      p Description: {{item.description}}
      p Price: {{item.price}}
      p Put it in the shop :
        input(type="checkbox" ng-model='item.forSale' ng-click='toggleStore( item )')
        button(ng-model='item' ng-click='deleteItem(item, $index)') DELETE
